	"version": "0.2.0",
	"configurations": [
		{
			"name": "Python: Run for short video",
			"type": "python",
			"request": "launch",
			"cwd": "${workspaceFolder}/Python",
			"program": "${workspaceFolder}/Python/main.py",
			"console": "integratedTerminal",
			"args": ["-f ./Entrance Camera - 4-24-2023, 4.17.54am cat.mp4"],
			"justMyCode": true,
			"env": {
				"API_BASE_URL": "https://localhost:7268"
			}
		},
		{
			"name": "Python: Default Capture Device",
			"type": "python",
			"request": "launch",
			"cwd": "${workspaceFolder}/Python",
			"program": "${workspaceFolder}/Python/main.py",
			"console": "integratedTerminal",
			"args": ["-d 0"],
			"justMyCode": true,
			"env": {
				"API_BASE_URL": "https://localhost:7268"
			}
		}
	]
}
